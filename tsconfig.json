{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "react": [
        "node_modules/preact/compat/"
      ],
      "react-dom": [
        "node_modules/preact/compat/"
      ],
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
